(* -*- tuareg -*- *)

let preprocess =
  match Sys.getenv "BISECT_ENABLE" with
  | "yes" -> "(preprocess (pps bisect_ppx))"
  | _ -> ""
  | exception Not_found -> ""

let () =
  Jbuild_plugin.V1.send @@
    {|
(library
 (name odoc_json)
 (public_name odoc.json)
    |} ^ preprocess ^ {|
 (libraries odoc_model odoc_html tyxml))
    |}
